{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "hexadecimal_color": {
      "type": "string",
      "pattern": "^\\S+$",
      "examples": [
        "#000000",
        "#FF0000",
        "#00FF00",
        "#0000FF",
        "#FFFF00",
        "#FF00FF",
        "#FFFFFF"
      ]
    },
    "color_number": {
      "type": "string",
      "pattern": "^[0-7]$"
    }
  },
